@model Dashboard.Models.Pagemodel
<link href="~/css/font_awesome.min.css" rel="stylesheet" />
<link href="~/css/forala_editor.min.css" rel="stylesheet" />

<form method="post" asp-action="Newpage" asp-controller="Addpage">

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Page</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">

                    <div class="col-8">
                        <input asp-for="Page_Name " class="form-control" placeholder="Title" />
                        <span asp-validation-for="Page_Name" class="text-danger"></span>


                        <input asp-for="Slug " class="form-control" placeholder="Slug" />
                        <span asp-validation-for="Slug" class="text-danger"></span>


                        @*<input asp-for="Category " class="form-control" placeholder="Category" />
        <span asp-validation-for="Category" class="text-danger"></span>*@
                        @if (ViewBag.SelectedValue != null)
                        {
                            <text>Category: </text> @ViewBag.SelectedValue;
                        }
                        <select asp-for="Category" class="form-control" asp-items="@(new SelectList(ViewBag.list_of_cat, "Id", "Name"))"></select>




                        <br />
                        <script src="https://cdn.tiny.cloud/1/34v9ax9p26h60hbv9hxa0zd4l2yz3qu0q4alk3ly37gy3wd7/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
                        @*<input asp-for="Paragraph " class="form-control" placeholder="Paragraph" />*@
                        <textarea id="Paragraph" asp-for="Paragraph " class="form-control"></textarea>
                        <span asp-validation-for="Paragraph" class="text-danger"></span>




                    </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-8 offset-4 row">

                                        <div class="col">
                                            <input type="submit" class="btn btn-info w-100" value="Submit" onkeypress="true" />
                                        </div>
                                        <div class="col">
                                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>Cancel</a>
                                        </div>
                                    </div>
                                </div>
                            </div>



                        </form>
                        <script>
                            tinymce.init(
                                {
                                    selector: '#Paragraph'
                                });
                        </script>
