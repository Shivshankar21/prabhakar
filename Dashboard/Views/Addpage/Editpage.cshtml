
@model Dashboard.Models.Pagemodel

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Edit pages</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-8">
                        <input asp-for="Page_Name" class="form-control" placeholder="Title" />
                        <span asp-validation-for="Page_Name" class="text-danger"></span>
                    </div>
                    <div class="col-8">
                        <input asp-for="Slug" class="form-control" placeholder="Title" />
                        <span asp-validation-for="Slug" class="text-danger"></span>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category" class="form-control" placeholder="Title" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Listpage" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">

            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
