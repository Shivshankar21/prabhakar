
@model IEnumerable<Dashboard.Models.Categorymodel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Newcategory" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add a Category
            </a>
        </div>

    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">

            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="10%">@obj.Id</td>
                    <td width="50%">@obj.Name</td>

                    <td width="40%" class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Editcategory" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                                <input type="submit" class="btn btn-primary w-100" value="Edit" />
                            </a>
                            <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Deletecategory" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt"></i>
                                <input type="submit" class="btn btn-danger w-100" value="Delete" />
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No category exists.</p>
    }

</div>

